<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="userServiceImpl" class="by.epam.aliaksei.litvin.service.impl.UserServiceImpl">
        <constructor-arg>
            <bean class="java.util.ArrayList"/>
        </constructor-arg>
    </bean>

    <bean id="auditoriumServiceImpl" class="by.epam.aliaksei.litvin.service.impl.AuditoriumServiceImpl">
        <constructor-arg>
            <bean class="java.util.HashSet"/>
        </constructor-arg>
    </bean>

</beans>